pipeline {
    agent any
    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "maven3.6.3"
    }
    
    stages {
          
         stage('Build'){
             steps{
            sh "mvn clean package"
                  }
        }
        
        stage('Building image') {
            steps{
                script {
              sh "docker pull yoshithadocker/mydockerrepo:16"
                     }
                  }
              }
    
    stage('scan'){
             steps{
            sh "grype yoshithadocker/mydockerrepo:16"
              }
        }
        
     }
}


